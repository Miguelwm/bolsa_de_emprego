<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Bolsa de Emprego", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Entidades", entidades_path %></li>
        <li><%= link_to "Candidatos", candidatos_path %></li>
        <li><%= link_to "Ofertas", ofertas_path %></li>
        <li><%= link_to "Noticias", noticias_frontoffice_index_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if conta_atual.perfil == nil %>
            <li><%= link_to conta_atual.nome , edit_conta_path(conta_atual) %></li>
            <% else %>
              <% if is_candidato? %>
                <li><%= link_to conta_atual.nome , edit_candidato_path(candidato_atual) %></li>
              <% else %>
                <li><%= link_to conta_atual.nome , edit_entidade_path(conta_atual.perfil.entidade) %></li>
              <% end %>
          <% end %>
          <li><%= link_to "Sair", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Registra-me", new_frontoffice_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
