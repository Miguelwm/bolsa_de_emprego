<%= tinymce%>
<%= simple_form_for(@noticia) do |f| %>

    <%= f.input :titulo, label: 'Titulo'%>
    <b>Sum√°rio</b><br>
    <%= f.text_area :sumario, label: 'Sumario', :class => "tinymce" %><br>
    <%= f.input :data, label: 'Data', as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d/%m/%Y') }%>
    <b>Texto</b><br>
    <%= f.text_area :texto, label: 'Texto', :class => "tinymce" %><br>

    <%= f.input :foto, label: 'Fotografia' %>

    <%= f.input :destaque, label: 'Destaque' %>

    <%= f.input :activo, label: 'Activo' %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <%= link_to "Cancelar", noticias_path , class: "btn btn-warning" %>
  <% end %>

  <script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
