<%= simple_form_for(@noticia) do |f| %>

    <%= f.input :titulo, label: 'Titulo'%>

    <%= f.input :data, label: 'Data'%>

    <%= f.input :sumario, label: 'Sumario'%>

    <%= f.input :texto, label: 'Texto' %>

    <%= f.file_field :foto, label: 'Foto(por testar)' %>

    <%= f.input :destaque, label: 'Destaque' %>

    <%= f.input :activo, label: 'Activo' %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <%= link_to "Cancelar", noticia_path(@noticia) , class: "btn btn-warning" %>
  <% end %>
