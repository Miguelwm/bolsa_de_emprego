<% provide(:title, 'Noticias') %>
<h1>Noticias</h1>
<div class="row">

  <div class="col-md-11">
    <%= form_tag(noticias_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Procurar noticias" %>
        <%= submit_tag "Procurar", :name => nil %><br><br>
    <% end %>
  </div>
  <div class="col-md-1">
  <%=button_to 'Inserir', new_noticia_path, method: :get%>
  </div>
  <div class="col-md-12">
    <br>
  </div>
  <div class="col-md-12">
    <% if @todas_noticias.blank? && params[:search]%>
       <h3>Não existem noticias que coincidam com a sua pesquisa</h3><br><br>
    <% end %>
  </div>

  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Noticia</th>
          <th>Data</th>
          <th>Destaque</th>
          <th>Activo</th>
          <th>Acções</th>
        </tr>
      </thead>
      <% @todas_noticias.each do |noticia| %>
        <tbody>
          <td><%=noticia.titulo%></td>
          <td><%=noticia.data%></td>
          <td><%=noticia.destaque%></td>
          <td><%=noticia.activo%></td>
          <td>
            <%=button_to 'Detalhes', noticia, method: :get%>
            <%=button_to 'Editar', edit_noticia_path(noticia), method: :get%>
            <%=button_to 'Apagar', noticia, method: :delete%>
          </td>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
