<% provide(:title, 'Entidades') %>
<h1>Entidades</h1>
<div class="row">

  <div class="col-md-12">
    <%= form_tag(entidades_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Procurar Entidades" %>
        <b><%= "Actividade Profissional: " %> </b>
        <%= select_tag :searchactividade, options_from_collection_for_select(ActividadeProfissional.all, :id, :actividade, params[:searchactividade]), include_blank:true %>
        &ensp;<%= submit_tag "Procurar", :name => nil, class:"btn btn-primary" %>
        <%= link_to "Reset", entidades_path, class:"btn btn-default" %><br><br>
    <% end %>
  </div>
  <div class="col-md-12">
    <br>
  </div>
  <div class="col-md-12">
    <% if @entidades.blank? && (params[:search] || params[:searcharea]) %>
       <h3>NÃ£o existem entidades que coincidam com a sua pesquisa</h3><br><br>
    <% end %>

    <div class="col-md-12">
      <% @entidades.each do |conta| %>
      <% @entidade = conta.perfil.entidade %>
        <div class="col-md-2">
            <%= image_tag @entidade.perfil.foto.url if @entidade.perfil.foto? %><br>
        </div>
        <div class="col-md-10">
          <%= link_to @entidade.perfil.conta.nome,@entidade %><br>
          <%= num_ofertas_activas(@entidade)%> oferta(s) ativa(s)<br>
          <%= @entidade.actividade_profissional.actividade%><br>
          <%= @entidade.perfil.apresentacao.html_safe%><br><br>
          <%= render 'editar' if logged_in? && entidade_atual==@entidade%>
          <%= render 'interessado_form' if logged_in? && is_candidato?%>

        </div>
        <div class="col-md-12">
          <br>
        </div>
          <% end %>
          <br>
        </div>
    </div>
  <%= will_paginate %>
  <br>
  <br>
  <%= link_to "Quero-me registar", registo_path %>
</div>
