<% provide(:title, 'Entidades') %>
<h1>Entidades</h1>
<div class="row">

  <div class="col-md-12">
    <%= form_tag(entidades_path, :method => "get", id: "search-form", remote:true) do %>
        <%= text_field_tag :search, params[:search], placeholder: "Procurar Entidades" %>
        &ensp;<b><%= "Actividade Profissional: " %> </b>
        <%= select_tag :searchactividade, (options_for_select([["Todas", ""]]) + options_from_collection_for_select(ActividadeProfissional.all, :id, :actividade, params[:searchactividade])), class:"btn btn-default dropdown-toggle"  %>
        &ensp;<%= submit_tag "Procurar", :name => nil, class:"btn btn-primary" %>
        <%= link_to "Reset", entidades_path, class:"btn btn-default" %><br><br>
    <% end %>
  </div>
  <div class="col-md-12">
    <br>
  </div>
    <div class = "sort_paginate_ajax"><%= render 'index' %></div>

  <br>
  <br>
  <%= link_to "Quero-me registar", registo_path %>
</div>
