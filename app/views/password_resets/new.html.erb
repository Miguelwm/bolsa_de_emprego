<%provide(:title, "Esqueci-me da password")%>
<h1>Esqueci-me da password</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.input :email, placeholder: 'email@example.com' %>
      <%= f.submit "Enviar email", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
