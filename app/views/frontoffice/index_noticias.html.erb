<% provide(:title, 'Noticias') %>
<h1>Noticias</h1>
<div class="row">


  <div class="col-md-12">
    <%= form_tag(noticias_frontoffice_index_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Procurar noticias" %>
        <%= submit_tag "Procurar", :name => nil %><br><br>
    <% end %>
  </div>
  <div class="col-md-12">
    <br>
  </div>
  <div class="col-md-12">
    <% if @frontoffice.blank? && params[:search]%>
       <h3>NÃ£o existem noticias que coincidam com a sua pesquisa</h3><br><br>
    <% end %>
  </div>


    <div class="col-md-12">
      <% @frontoffice.each do |noticia| %>
        <div class="col-md-2">
            <%= image_tag noticia.foto.url if noticia.foto? %><br>
        </div>
        <div class="col-md-10">
          <%= link_to noticia.titulo, noticia_frontoffice_index_path(noticia) %><br>
          <%= noticia.data%><br>
          <%= noticia.sumario%><br>
        </div>
        <div class="col-md-12">
          <br>
        </div>
      <% end %>
    </div>
  <%= will_paginate %>
</div>
