<% provide(:title, 'Noticias') %>
<h1>Noticias</h1>
<div class="row">


  <div class="col-md-12">
    <%= form_tag(noticias_frontoffice_index_path, :method => "get", id: "search-form", remote:true) do %>
        <%= text_field_tag :search, params[:search], placeholder: "Procurar noticias" %>
        &ensp;<%= submit_tag "Procurar", :name => nil, class:"btn btn-primary" %>
        <%= link_to "Reset", noticias_frontoffice_index_path, class:"btn btn-default" %><br><br>

  </div>
  <div class="col-md-12">
    <br>
  </div>
<div class = "sort_paginate_ajax"><%= render 'index_noticias' %></div>
<% end %>
</div>
