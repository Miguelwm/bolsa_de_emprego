<div class="col-md-12">
  <% if @frontoffice.blank? && params[:search]%>
     <h3>NÃ£o existem noticias que coincidam com a sua pesquisa</h3><br><br>
  <% end %>
</div>


  <div class="col-md-12" id="collection_index">
    <% @frontoffice.each do |noticia| %>
      <div class="col-md-2">
          <%= image_tag noticia.foto.url if noticia.foto? %><br>
      </div>
      <div class="col-md-10">
        <%= link_to noticia.titulo, noticia_frontoffice_index_path(noticia) %><br>
        <%= noticia.data%><br>
        <%= noticia.sumario.html_safe%><br>
      </div>
      <div class="col-md-12">
        <br>
      </div>
    <% end %>
  </div>
<div id="collection_paginator">
<%= will_paginate @frontoffice %>
</div>
<script type="text/javascript">
  $(document).ready( function() {
    $('#collection_paginator a').each( function() {
      $(this).attr( 'data-remote', 'true' )
      $(this).attr( 'data-replace', '#collection_index' )
    })
  })
</script>
