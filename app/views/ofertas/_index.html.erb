<div class="col-md-12">
  <% if @ofertas.where(activo:true).blank? && (params[:search] || params[:searcharea]) %>
     <h3>Não existem ofertas que coincidam com a sua pesquisa</h3><br><br>
  <% end %>

  <div class="col-md-12">
    <% @ofertas.where(activo:true).each do |oferta| %>
      <div class="col-md-2">
          <%= image_tag oferta.foto.url if oferta.foto? %><br>
      </div>
      <div class="col-md-10">
        <%= link_to oferta.titulo, oferta %><br>
        <%= oferta.val_inicio %> a <%= oferta.val_fim %><br>
        <%= oferta.entidade.perfil.conta.nome%><br>
        <%= oferta.area_profissional.area%><br>
        <%= oferta.descricao%><br>
        <% if oferta.entidade==entidade_atual %>
          <%= link_to "Editar", edit_oferta_path(oferta), class: "btn btn-primary" %>
          <div class="col-md-12">
            <p>
          </div>
        <% end %>
        <% if logged_in? && is_candidato? %>
          <p>
          <div id="form_candidatura">
            <% if candidato_atual.ofertas?(oferta) %>
              <%= render 'candidatado' %>
            <% else %>
              <%= form_for(candidato_atual.candidaturas.build) do |f| %>
                <div><%= hidden_field_tag :oferta_id, oferta.id %></div>
                <%= f.submit "Candidatar-me",
                  data: { confirm:'Esta prestes a candidatar-se a esta oferta,
                    este processo não pode ser revertido.Pretende continuar?'},
                    class: "btn btn-primary" %>
                    <p>
              <% end %>
            <% end %>
            <br>
          </div>
        <% end %>
      </div>
      <div class="col-md-12">

      </div>
      <div class="col-md-12">
        <br>
     </div>

    <% end %>
    </div>
  </div>
<%= js_will_paginate @ofertas %>
