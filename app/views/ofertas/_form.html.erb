<%= simple_form_for(@oferta) do |f| %>

    <%= f.input :titulo, label: 'Titulo'%>


    <%= f.input :descricao, label: 'Descrição' %>

    <%= f.input :val_inicio, label: 'Validade Inicio', as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d/%m/%Y') }%>
    <%= f.input :val_fim, label: 'Validade fim', as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d/%m/%Y') }%>

    <%= f.input :foto, label: 'Fotografia' %>

    <%= f.input :area_profissional_id, :collection => @todas_areas,
    :label_method => :area,
    :value_method => :id,
    :label => 'Area Profissional', :include_blank => false %>

    <%= f.input :tipo_contrato_id, :collection => @todos_tipos,
    :label_method => :tipo,
    :value_method => :id,
    :label => 'Tipo de Contrato', :include_blank => false %>

    <%= f.input :salario_id, :collection => @todos_salarios,
    :label_method => :quantia,
    :value_method => :id,
    :label => 'Salario', :include_blank => false %>

    <%= f.input :activo, label: 'Activo' %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <% end %>


  <script type="text/javascript">
  $(document).ready(function(){
  $('.datepicker').datepicker();
  });
  </script>
