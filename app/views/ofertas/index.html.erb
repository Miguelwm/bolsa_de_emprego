<% provide(:title, 'Ofertas') %>
<h1>Ofertas</h1>
<div class="row">
  <%= will_paginate %>
    <div class="col-md-6">
      <% @ofertas.each do |oferta| %>
        <div class="col-md-6">
            <%= image_tag oferta.picture.url if oferta.picture? %><br>
        </div>
        <div class="col-md-6">
          <%= link_to oferta.titulo, oferta %><br>
          <%= oferta.val_inicio %> a <%= oferta.val_fim %><br>
          <%= oferta.entidade.perfil.conta.nome%><br>
          <%= oferta.descricao%><br>
        </div>
      <% end %>
    </div>
  <%= will_paginate %>
</div>
