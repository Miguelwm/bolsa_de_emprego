  <%= simple_form_for(@conta, url: alterar_password_path) do |f| %>
   <div class="passwordantiga">
      <%= f.input :passwordantiga, placeholder: 'Password atual', label:'Password atual'%>
   </div>
    <div class ="password">
      <%= f.input :password, placeholder: 'Password' %>
    </div>
    <div class ="password_confirmation">
      <%= f.input :password_confirmation,label: 'Confirmação de Password', placeholder: 'Password' %>
    </div>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <% end %>
