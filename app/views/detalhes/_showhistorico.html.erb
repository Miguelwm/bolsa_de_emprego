<% if @ofertas_inativas.any? %>
<% @ofertas_inativas.each do |oferta| %>
<div id="collection_index">
  <div class="col-md-2">
      <%= image_tag oferta.foto.url if oferta.foto? %><br>
  </div>
  <div class="col-md-10">
    <%= link_to oferta.titulo, oferta %><br>
    <%= oferta.val_inicio %> a <%= oferta.val_fim %><br>
    <%= oferta.entidade.perfil.conta.nome%><br>
    <%= oferta.descricao%><br>
  </div>
  <div class="col-md-12">
    <br>
 </div>
</div>
<% end %>
<div id="collection_paginator">
<%= will_paginate @ofertas_inativas %>
</div>
<script type="text/javascript">
  $(document).ready( function() {
    $('#collection_paginator a').each( function() {
      $(this).attr( 'data-remote', 'true' )
      $(this).attr( 'data-replace', '#collection_index' )
    })
  })
</script>
<% else %>
<div class="col-md-9">
<br>
<br>
<h2>NÃ£o tem nenhuma oferta inativa</h2>
</div>
<% end %>
