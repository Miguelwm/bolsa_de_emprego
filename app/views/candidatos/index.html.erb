    <% provide(:title, 'Candidatos') %>
    <h1>Candidatos</h1>
    <div class="row">

    <div class="col-md-12">
      <%= form_tag(candidatos_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Procurar Candidatos" %>
          <b><%= "Area Profissional: " %> </b>
          <%= select_tag :searcharea, options_from_collection_for_select(AreaProfissional.all, :id, :area, params[:searcharea]), include_blank:true %>
           &ensp;<%= submit_tag "Procurar", :name => nil, class:"btn btn-primary" %>
           <%= link_to "Reset", candidatos_path, class:"btn btn-primary" %><br><br>

      <% end %>
    </div>
    <div class="col-md-12">
      <br>
    </div>
    <div class="col-md-12">
      <% if @candidatos.blank? && (params[:search] || params[:searcharea]) %>
         <h3>NÃ£o existem candidatos que coincidam com a sua pesquisa</h3><br><br>
      <% end %>

    <div class="col-md-12">
      <% @candidatos.each do |conta| %>
      <% @candidato = conta.perfil.candidato %>
        <div class="col-md-2">
          <%= image_tag @candidato.perfil.foto.url if @candidato.perfil.foto? %><br><br>
        </div>
        <div class="col-md-10">
          <%= link_to @candidato.perfil.conta.nome,@candidato %><br>
          <%= @candidato.area_profissional.area%><br>
          <%= @candidato.experiencia.html_safe%><br>
          <%= @candidato.nivel_habilitacao.nivel%><br><br>
          <%= render 'editar' if logged_in? && @candidato==candidato_atual %><br>
          <%= render 'interessado_form' if logged_in? && is_entidade?%>
        </div>
        <div class="col-md-12">
          <br>
        </div>
      <% end %>
        <br>
      </div>
    </div>
  <%= will_paginate %>
  <br>
  <br>
  <%= link_to "Quero-me registar", registo_path %>
</div>
